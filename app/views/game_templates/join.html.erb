<style>
  .page-card {
    max-width: 520px;
    margin: 1.5rem auto;
    background: #ffffff;
    padding: 26px 30px;
    border-radius: 14px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.08);
  }

  h1, h2 {
    color: #000000;
    margin-top: 0;
    font-weight: 700;
  }

  h1 {
    font-size: 1.9rem;
    text-align: center;
    margin-bottom: 1.25rem;
  }

  h2 {
    font-size: 1.35rem;
    margin-bottom: 0.75rem;
  }

  label {
    font-weight: 600;
    color: #000000;
    margin-bottom: 0.3rem;
    display: block;
  }

  .text-alert {
    color: #b91c1c;
    font-size: 0.95rem;
    margin-bottom: 0.6rem;
    text-align: center;
  }

  .join-input {
    width: 100%;
    padding: 0.6rem 0.75rem;
    border-radius: 8px;
    border: 1px solid #d1d5db;
    margin-bottom: 1rem;
    font-size: 1rem;
    color: #000;
    background: #fff;
  }

  .join-input:focus {
    outline: none;
    border-color: #6b7280;
    box-shadow: 0 0 0 2px #e5e7eb;
  }

  .btn-primary {
    width: 100%;
    padding: 0.75rem;
    border-radius: 8px;
    border: none;
    font-weight: 600;
    background: #3b82f6;
    color: white;
    cursor: pointer;
    transition: 0.15s ease-in-out;
  }

  .btn-primary:hover {
    filter: brightness(0.9);
    transform: translateY(-2px);
  }

  .spectate-table {
  margin-top: 1rem;
  border: 1px solid #e5e7eb;
  border-radius: 10px;
  overflow: hidden;
}

.spectate-row {
  display: grid;
  grid-template-columns: 1fr auto;
  padding: 0.85rem 1rem;
  border-bottom: 1px solid #e5e7eb;
  text-decoration: none;
  color: #000;
  background: #fff;
  font-size: 1rem;
  font-weight: 500;
  transition: background 0.15s ease, color 0.15s ease;
}

.spectate-row:last-child {
  border-bottom: none;
}

.spectate-row:hover {
  background: #f3f4f6;
  color: #6b7280;
}

.spectate-arrow {
  font-size: 1.3rem;
  color: #9ca3af;
  display: flex;
  align-items: center;
  transition: color 0.15s ease;
}

.spectate-row:hover .spectate-arrow {
  color: #6b7280;
}

.status-pill {
  display: inline-flex;
  align-items: center;
  padding: 0.2rem 0.55rem;
  border-radius: 999px;
  font-size: 0.78rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.04em;
}

.status-waiting {
  background: #fef3c7;
  color: #92400e;
}

.status-started {
  background: #dcfce7;
  color: #166534;
}

.status-finished {
  background: #e5e7eb;
  color: #374151;
}
</style>


<div class="page-card">
  <h1>Join a Game</h1>

  <% if alert.present? %>
    <div class="text-alert"><%= alert %></div>
  <% end %>

  <form action="/join_game" method="post">
    <label for="room_code_box">Enter room code</label>
    <input type="text" id="room_code_box" name="query_room_code" class="join-input">

    <button type="submit" class="btn-primary">Join Game</button>
  </form>
</div>

<div class="spectate-card">
  <h2>Spectate Games</h2>

  <dd>Enter a room code above to join as a player.</dd>
  <dd>You may spectate any game below.</dd>

  <div class="spectate-table">
    <% @list_of_games.each do |a_game| %>
      <a href="/games/<%= a_game.id %>" class="spectate-row">
        <div class="spectate-name" style="display: flex; align-items: center; gap: 0.75rem; flex-wrap: wrap;">
          <div style="font-weight: 600;">
            <% if a_game.name.present? %>
              <%= a_game.name %>
            <% else %>
              Game #<%= a_game.id %>
            <% end %>
          </div>
          <div style="font-size: 0.85rem; color: #6b7280; display: flex; align-items: center; gap: 0.5rem;">
            <% status_class =
              case a_game.status
              when 'started' then 'status-started'
              when 'finished' then 'status-finished'
              else 'status-waiting'
              end %>
            <span class="status-pill <%= status_class %>">
              <%= a_game.status.capitalize %>
            </span>
            <span>• <%= a_game.gameplayers_count %>/<%= a_game.max_players %> players</span>
          </div>
        </div>

        <div class="spectate-arrow">›</div>
      </a>
    <% end %>
  </div>
</div>

<script>
  (function() {
    const games = <%= raw @list_of_games.map { |g| { id: g.id, name: g.name, status: g.status, players: g.gameplayers_count } }.to_json %>;
    let lastFingerprint = JSON.stringify(games);
    
    async function pollGameList() {
      try {
        const res = await fetch(window.location.href, {
          headers: { 'Accept': 'text/html' }
        });
        
        if (!res.ok) {
          console.debug('Failed to fetch game list');
          return;
        }
        
        const html = await res.text();
        
        const parser = new DOMParser();
        const doc = parser.parseFromString(html, 'text/html');
        const gameRows = doc.querySelectorAll('.spectate-row');
        
        const currentGames = Array.from(gameRows).map(row => {
          const href = row.getAttribute('href');
          const name = row.querySelector('.spectate-name')?.textContent?.trim();
          return { href, name };
        });
        
        const currentFingerprint = JSON.stringify(currentGames);
        
        if (lastFingerprint !== currentFingerprint) {
          console.log('Game list changed, refreshing page...');
          window.location.reload();
        }
        
        lastFingerprint = currentFingerprint;
      } catch (err) {
        console.debug('Poll error:', err);
      }
    }
    
    setInterval(pollGameList, 3000);
  })();
</script>
