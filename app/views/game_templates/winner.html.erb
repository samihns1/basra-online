<style>
  .gameover-card {
    max-width: 520px;
    margin: 2rem auto;
    background: #ffffff;
    padding: 28px 32px;
    border-radius: 16px;
    box-shadow: 0 14px 35px rgba(0,0,0,0.10);
    text-align: center;
  }

  .gameover-card h1 {
    margin-top: 0;
    font-size: 2rem;
    font-weight: 700;
    color: #000000;
  }

  .winner-name {
    font-size: 1.4rem;
    margin-bottom: 1.25rem;
    font-weight: 600;
    color: #111827;
  }

  .scores-title {
    margin-top: 0.75rem;
    margin-bottom: 0.5rem;
    font-size: 1.2rem;
    color: #000000;
    font-weight: 600;
  }

  .scores-table {
    margin: 0.75rem auto 1.5rem;
    width: 100%;
    max-width: 420px;
    border-collapse: collapse;
    text-align: left;
  }

  .scores-table thead th {
    font-size: 0.9rem;
    font-weight: 600;
    color: #6b7280;
    padding: 0.35rem 0.25rem;
    border-bottom: 1px solid #e5e7eb;
  }

  .scores-table tbody td {
    padding: 0.4rem 0.25rem;
    font-size: 1rem;
    color: #111827;
    border-bottom: 1px solid #f3f4f6;
  }

  .scores-table tbody tr:last-child td {
    border-bottom: none;
  }

  .score-seat {
    font-weight: 600;
    white-space: nowrap;
  }

  .score-points {
    text-align: center;
    white-space: nowrap;
    font-weight: 600;
  }

  .back-link {
    display: inline-block;
    padding: 0.6rem 1.1rem;
    border-radius: 8px;
    background: #3b82f6;
    color: white;
    text-decoration: none;
    font-weight: 600;
    transition: 0.15s ease-in-out;
  }

  .back-link:hover {
    filter: brightness(0.9);
    transform: translateY(-2px);
  }
</style>

<div class="gameover-card">

  <h1>Game Over</h1>

  <% if @winner %>
    <div class="winner-name">Winner: <%= @winner.username %></div>
  <% else %>
    <div class="winner-name">Winner</div>
  <% end %>

  <div class="scores-title">Final Scores</div>

  <table class="scores-table">
    <thead>
      <tr>
        <th>Seat / Player</th>
        <th class="score-points">Points</th>
      </tr>
    </thead>
    <tbody>
      <% @scores.each do |s| %>
        <tr>
          <td>
            <span class="score-seat">Seat <%= s[:seat] %>:</span>
            &nbsp;<%= s[:username] %>
          </td>
          <td class="score-points"><%= s[:score] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <a href="/games" class="back-link">Back to games</a>

</div>
